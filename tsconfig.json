{
  "compilerOptions": {
    "target": "ES2020",               // Update target to ES2020 or later for BigInt support
    "module": "CommonJS",
    "outDir": "dist",
    "rootDir": "src",
    "strict": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "lib": ["es2020", "dom"],         // Ensure that BigInt and process are recognized
    "skipLibCheck": true              // Skip library type checking to speed up compilation
  }
}

  